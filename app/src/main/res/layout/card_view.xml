<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100dp"


        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="#80000000"
        card_view:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
       >


        <ImageView
            android:id="@+id/logo1"
            android:layout_width="100dp"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/descript"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:gravity="start"
            android:text="main"
            android:textColor="@color/white"
            android:textSize="16sp"
            card_view:layout_constraintStart_toEndOf="@+id/logo1"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descript"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:text="33.35"
            android:textColor="@color/white"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/logo1" />


        <TextView
            android:id="@+id/hum"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ic_wi_humidity"
            android:gravity="start"
            android:text="74.7 %"
            android:textColor="@color/white"
            android:textSize="16sp"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/temp"/>

        <TextView
            android:id="@+id/wind"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:drawableStart="@drawable/strong_wind"
            android:gravity="start"
            android:text="3.59 m/s"
            android:textColor="@color/white"
            android:textSize="16sp"
            card_view:layout_constraintStart_toEndOf="@+id/descript"
            card_view:layout_constraintTop_toTopOf="parent"
             />

        <TextView
            android:id="@+id/pres"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:text="name"
            android:textColor="@color/white"
            android:textSize="16sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:text="time"
            android:textColor="@color/white"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" />


    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>